<%# Uses rails_bootstrap_form gem.  i.e.:

  bootstrap_form_for(workflow) do |f|

API at: https://github.com/bootstrap-ruby/rails-bootstrap-forms %>

<%= f.select :queue_name, [["entry"], ["long"]], { selected: @workflow.queue_name || "entry", label: "Queue" }, { class: "selectpicker" } %>
<%= f.number_field :num_nodes, { value: (@workflow.num_nodes || 1), label: "Number of nodes" } %>
<%= f.number_field :cpu_cores, { value: (@workflow.cpu_cores || 1), label: "Number of CPU cores" } %>
<%= f.number_field :memory, { value: (@workflow.memory || 1), label: "Amount of memory (Gb)" } %>
<%= f.number_field :walltime, { value: (@workflow.walltime || 1), label: "Walltime (hours)", help: "Defaults to queue walltime" } %>
